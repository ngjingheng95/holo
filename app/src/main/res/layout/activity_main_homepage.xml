<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoloHomepage"
    android:id="@+id/homepage_layout"
    android:background="@color/gray_bg"
    >

    <!-- Pacifico Font -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/arholo_full"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/homepage_logo"
        />

    <TextView
        android:id="@+id/homepage_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Augment your world!"
        android:textColor="@color/ultraLightGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/homepage_outer_layout"
        android:layout_below="@+id/homepage_tagline"
        android:background="@drawable/homepage_menu_bg"
        android:padding="30dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="3dp"
            android:background="@drawable/bg_browse_holos"
            android:clickable="true"
            android:onClick="onClickCreateAr"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_create_holo">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:id="@+id/plus_sign_1"
                android:src="@drawable/add_image_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_sign_1"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="8dp"
                android:text="Create Holo"
                android:textColor="@color/gray_bg"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="3dp"
            android:background="@drawable/bg_browse_holos"
            android:clickable="true"
            android:id="@+id/btn_place_holo"
            android:onClick="onClickPlaceAr">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:id="@+id/plus_sign_2"
                android:src="@drawable/add_holo_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_sign_2"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="8dp"
                android:text="Place Holos"
                android:textColor="@color/gray_bg"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

